<%= form_for(profile) do |f| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Imię:" %><br>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :surname , "Nazwisko" %><br>
    <%= f.text_field :surname, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :city , "Miasto" %><br>
    <%= f.text_field :city, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :street , "Ulica" %><br>
    <%= f.text_field :street, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :home_number , "Numer domu" %><br>
    <%= f.text_field :home_number, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :place_number , "Numer mieszkania" %><br>
    <%= f.text_field :place_number, :class => "form-control" %>
  </div>

  <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="form-group">
    <%= profile.photo_url if profile.photo? %>
    <%= f.file_field :photo %>
    <%= f.hidden_field :photo_cache %>
  </div>
  <div class="actions">
    <%= f.submit "Zatwierdź dane", :class => "btn btn-primary" %>
  </div>
<% end %>
